<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="#36D3F4">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="229dp"
        android:layout_height="145dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quiz_lg" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name"
        android:layout_width="339dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/edittext_style"
        android:drawableStart="@drawable/name_icon"
        android:drawablePadding="7dp"
        android:hint="Name"
        android:paddingStart="15dp"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="339dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_style"
        android:drawableStart="@drawable/email_icon"
        android:hint="Email"
        android:paddingStart="15dp"
        android:drawablePadding="8dp"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/pass"
        android:layout_width="339dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_style"
        android:drawableStart="@drawable/pass_icon"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:paddingStart="15dp"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/signup_txt"
        android:layout_width="219dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_effect"
        android:paddingTop="13dp"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass" />


    <TextView
        android:id="@+id/dont"
        android:layout_width="336dp"
        android:layout_height="32dp"
        android:text="Already have account? Log in"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>